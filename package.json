{
  "name": "idux",
  "version": "0.0.0-NOT-USED",
  "private": true,
  "description": "A UI Component Library for Vue 3.x",
  "license": "MIT",
  "scripts": {
    "start": "gulp start --gulpfile ./scripts/gulp/gulpfile.ts",
    "build": "gulp build --gulpfile ./scripts/gulp/gulpfile.ts",
    "icons": "gulp icons --gulpfile ./scripts/gulp/gulpfile.ts",
    "gen": "ts-node scripts/gen/generate.ts",
    "postinstall": "lerna bootstrap",
    "version": "lerna version --conventional-commits",
    "test": "jest",
    "lint": "npm run ls-lint && npm run eslint && npm run stylelint && npm run markdownlint",
    "lint-fix": "npm run ls-lint && npm run eslint-fix && npm run stylelint-fix && npm run markdownlint-fix",
    "eslint": "eslint ./packages --ext .vue,.js,.ts",
    "eslint-fix": "eslint --fix ./packages  --ext .vue,.js,.ts",
    "stylelint": "stylelint \"./packages/components/**/*.less\" --syntax less",
    "stylelint-fix": "stylelint --fix \"./packages/components/**/*.less\" --syntax less",
    "markdownlint": "markdownlint \"./packages/{cdk,components,pro}/**/*.md\"",
    "markdownlint-fix": "markdownlint --fix \"./packages/{cdk,components,pro}/**/*.md\"",
    "ls-lint": "ls-lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ls-lint && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": [
      "prettier --write"
    ],
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.less": [
      "stylelint --fix"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "@ls-lint/ls-lint": "^1.10.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/figlet": "^1.5.4",
    "@types/fs-extra": "^9.0.12",
    "@types/gulp": "^4.0.9",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "^27.0.1",
    "@types/less": "^3.0.3",
    "@types/lodash-es": "^4.17.4",
    "@types/marked": "^3.0.0",
    "@types/parse5": "^6.0.1",
    "@types/prismjs": "^1.16.6",
    "@types/svgo": "^2.4.0",
    "@types/yaml-front-matter": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-vue": "^1.6.0",
    "@vitejs/plugin-vue-jsx": "^1.1.7",
    "@vue/babel-plugin-jsx": "^1.0.6",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.12",
    "babel-jest": "^27.0.6",
    "chalk": "^4.1.2",
    "codecov": "^3.8.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.22",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.16.0",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.0",
    "gulp": "^4.0.2",
    "husky": "^4.3.0",
    "inquirer": "^8.1.2",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "lerna": "^4.0.0",
    "less": "^4.1.1",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-npm-import": "^2.1.0",
    "lint-staged": "^11.1.2",
    "lodash-es": "^4.17.21",
    "markdownlint-cli": "^0.28.1",
    "marked": "^3.0.2",
    "ora": "^5.4.1",
    "parse5": "^6.0.1",
    "prettier": "^2.3.2",
    "prismjs": "^1.24.1",
    "remark": "^13.0.0",
    "resolve-bin": "^0.4.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "svgo": "^2.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "vite": "^2.5.1",
    "vite-plugin-components": "^0.13.2",
    "vue3-jest": "^27.0.0-alpha.1",
    "yaml-front-matter": "^4.1.1"
  },
  "engines": {
    "node": ">12.0.0"
  }
}
