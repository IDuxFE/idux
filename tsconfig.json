{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@idux": [
        "./packages"
      ],
      "@idux/*": [
        "./packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "output"
  ]
}
