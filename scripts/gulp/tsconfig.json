{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../output",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "es6",
    "types": ["node"],
    "baseUrl": "."
  },
  "files": ["gulpfile.ts"]
}
