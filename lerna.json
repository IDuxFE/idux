{
  "packages": ["packages/*"],
  "version": "2.1.0",
  "command": {
    "publish": {
      "allowBranch": ["main", "release", "next", "hotfix"],
      "ignoreChanges": ["*.md", "**/__tests__/**", "**/demo/**", "**/docs/**"],
      "message": "docs(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "bootstrap": {
      "npmClient": "pnpm"
    }
  }
}
