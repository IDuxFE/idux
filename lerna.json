{
  "packages": ["packages/*"],
  "version": "0.3.0",
  "command": {
    "publish": {
      "allowBranch": ["main", "next"],
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "docs(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "bootstrap": {
      "ignore": "",
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
