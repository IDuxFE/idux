{
  "packages": ["packages/*"],
  "version": "1.0.0-beta.18",
  "command": {
    "publish": {
      "allowBranch": ["main", "next", "hotfix"],
      "ignoreChanges": ["*.md", "**/__tests__/**", "**/demo/**", "**/docs/**"],
      "message": "docs(release): publish %s",
      "registry": "https://registry.npmjs.org",
      "preid": "beta"
    },
    "bootstrap": {
      "npmClient": "pnpm"
    }
  }
}
