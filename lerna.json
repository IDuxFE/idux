{
  "packages": ["packages/*"],
  "version": "1.0.0-alpha.0",
  "command": {
    "publish": {
      "allowBranch": ["main", "next"],
      "ignoreChanges": ["*.md", "**/__tests__/**", "**/demo/**", "**/docs/**"],
      "message": "docs(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "bootstrap": {
      "ignore": "",
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
